{
  "name": "detect-it",
  "version": "3.0.3",
  "description": "Detect if a device is mouse only, touch only, or hybrid",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && babel src -d lib --presets=env",
    "prepublish": "yarn build",
    "dev": "yarn link && babel src -d lib --watch --presets=env"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafrex/detect-it.git"
  },
  "keywords": [
    "detect",
    "device",
    "mouse",
    "touch",
    "hybrid",
    "passive events"
  ],
  "author": "Rafael Pedicini <code@rafrex.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafrex/detect-it/issues"
  },
  "homepage": "https://github.com/rafrex/detect-it#readme",
  "dependencies": {
    "detect-hover": "^1.0.2",
    "detect-passive-events": "^1.0.4",
    "detect-pointer": "^1.0.2",
    "detect-touch-events": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0"
  }
}
